<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppApuntes_DanielVizcarra.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AppApuntes_DanielVizcarra.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Notes" Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}">
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPageDV}" />
    </FlyoutItem>

    <FlyoutItem Title="About" Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPageDV}" />
    </FlyoutItem>

    <FlyoutItem Title="Caracteres" Icon="{OnPlatform 'text.png', iOS='text.png', MacCatalyst='text.png'}">
        <ShellContent
            Title="Caracteres"
            ContentTemplate="{DataTemplate views:TextPageDV}" />
    </FlyoutItem>

</Shell>
